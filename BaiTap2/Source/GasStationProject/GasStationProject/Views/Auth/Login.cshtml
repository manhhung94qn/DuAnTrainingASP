@model GasStationProject.Models.UserLoginVM

@{

    ViewBag.Title = "Login";
}


<main>
    <center>

        <h5 class="indigo-text"> @GasStationProject.Resources.Resource.D0001 </h5>


        <div class="z-depth-1 grey lighten-4 row container-form" style="display: inline-block; padding: 32px 48px 0px 48px; border: 1px solid #EEE">

            @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "col s12" }))
            {
                @Html.AntiForgeryToken()
                <div class='row form-group'>
                </div>

                <div class='row form-group'>
                    <div class='input-field col-12'>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control validate", id = "email", autofocus = "true" } })
                        @Html.LabelFor(model => model.Email)
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger text-left w-100 d-block" })
                    </div>
                </div>

                <div class='row form-group'>
                    <div class='input-field col-12'>
                        @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control validate", id = "email" } })
                        @Html.LabelFor(model => model.Password)
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger text-left w-100 d-block" })
                    </div>
                </div>


                <br />
                <center>
                    <div class='row'>
                        <button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect indigo'>ロゲイン</button>
                    </div>
                </center>
                <div class='w-100'>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger text-left w-100 d-block" })
                </div>


            }


        </div>
    </center>
</main>



@section PageStyle {
    <link href="@Url.Content("~/Content/css/login.css")" rel="stylesheet">
}
